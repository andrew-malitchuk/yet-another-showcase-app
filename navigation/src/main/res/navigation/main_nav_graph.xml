<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/list_flow">

    <include app:graph="@navigation/list_flow" />

    <include app:graph="@navigation/details_flow" />

    <include app:graph="@navigation/search_flow" />

    <action
        android:id="@+id/action_details_flow"
        app:destination="@id/details_flow">
        <argument
            android:name="id"
            app:argType="string" />
    </action>

</navigation>